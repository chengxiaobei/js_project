            <div class="info-div">
              <!-- 名字 -->
              <div class="name-div">
                <!-- 左侧的名字和回复 -->
                <div class="left name-reply-div">
                  <span class="left uname-span">张三</span>
                  <div class="clearf"></div>
                </div>
                <!-- 日期 -->
                <div class="right date-div">
                  <p>07:22</p>
                </div>
                <div class="clearf"></div>
              </div>
              <!-- 评论 -->
              <div class="comment-div">
                <p>说得真好啊，文采太棒了！</p>
              </div>
            </div>
          </li>
          <li>
            <!-- 头像 -->
