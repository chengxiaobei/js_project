  <!-- 省份 -->
  <div class="wrap" id="wrap1_area" style="display:none;">
    <script type="text/x-jsmart-tmpl" id="provice_list_tpl">
      <header>
        <a class="back-btn backButton" href="javascript:void(0);"></a>
        <h2>选择地区</h2>
      </header>
      <section class="main-section">
        <div class="xzdq-city">
          <ul>
            {foreach $data as $key=>$value}
              <li data-name="{$value.province_name}" data-code="{$value.province_code}" class="provice"><a href="javascript:void(0);">{$value.province_name}</a></li>
            {/foreach}
          </ul>
        </div>
      </section>
    </script>
  </div>
  
  <!-- 城市 -->
  <div class="wrap" id="wrap2_area" style="display:none;">
    <script type="text/x-jsmart-tmpl" id="city_list_tpl">
      <header>
        <a class="back-btn backButton" href="javascript:void(0);"></a>
        <h2>选择地区</h2>
      </header>
      <section class="main-section">
        <div class="xzdq-city">
          <div class="xzdq-selected">
            <div class="xzdq-town left">{$province_name}</div>
            <a class="xzdq-cx right select_again" href="javascript:void(0);">重选</a>
            <div class="clearf"></div>
          </div>
          <ul>
            {foreach $data as $key=>$value}
              <li class="city" data-name="{$value.city_name}" data-code="{$value.city_code}"><a href="javascript:void(0);">{$value.city_name}</a></li>
            {/foreach}
          </ul>
        </div>
      </section>
    </script>
  </div>

  <!-- 地区 -->
  <div class="wrap" id="wrap3_area">
    <script type="text/x-jsmart-tmpl" id="area_list_tpl">
      <header>
        <a class="back-btn backButton" href="javascript:void(0);"></a>
        <h2>选择地区</h2>
      </header>
      <section class="main-section">
        <div class="xzdq-city">
          <div class="xzdq-selected">
            <div class="xzdq-town left">{$province_name}{$city_name}</div>
            <a class="xzdq-cx right select_again" href="javascript:void(0);">重选</a>
            <div class="clearf"></div>
          </div>
          <ul>
            {foreach $data as $key=>$value}
              <li class="area" data-code="{$value.area_code}" data-name="{$value.area_name}"><a href="javascript:void(0);">{$value.area_name}</a></li>
            {/foreach}
          </ul>
        </div>
      </section>
    </script>
  </div>
